{
  "private": true,
  "name": "tv-start-page",
  "description": "",
  "license": "",
  "scripts": {
    "start": "remix-serve build",
    "build": "yarn build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently \"yarn dev:css\" \"yarn dev:remix\"",
    "dev:remix": "node -r dotenv/config node_modules/.bin/remix dev",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "postinstall": "remix setup node",
    "prettier": "prettier --write ./app/**",
    "eslint": "eslint --fix ./app/**",
    "lint": "yarn prettier && yarn eslint",
    "docker:build": "docker build -t tvstartpage .",
    "docker:run": "docker run -t -d --name tvstartpage -p 80:3000 --env-file .env tvstartpage",
    "docker:rm": "docker rm tvstartpage"
  },
  "dependencies": {
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "@tailwindcss/line-clamp": "^0.3.1",
    "classnames": "^2.3.1",
    "dotenv": "^14.3.2",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "eslint": "^8.7.0",
    "eslint-plugin-react": "^7.28.0",
    "postcss": "^8.4.5",
    "tailwindcss": "^3.0.16",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
